datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ShortlistedHome {
  id            String   @id @default(cuid())
  listingId     String
  listingJson   String   // Store full Listing object as JSON string
  scoreJson     String   // Store full ScoreBreakdown as JSON string
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([listingId])
}
